  "activationEvents": [ "*",
    "onCommand:ramu.scanWorkspace"
  ],
  "main": "./out/extension.js",
   "contributes": {
    "commands": [
      {
        "command": "ramu.scanWorkspace",
        "title": "ðŸ§  RAMU: Scan Workspace"
      },
      {
